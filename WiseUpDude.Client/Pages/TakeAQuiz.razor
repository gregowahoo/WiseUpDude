@code {
    [Parameter]
    public int QuizId { get; set; }

    private Quiz? Quiz;
    private UserQuizAttempt? CurrentAttempt;
    private int? CurrentAttemptId;
    private DateTime? AttemptStartTime;
    // Track which questions have been answered to prevent duplicates
    private Dictionary<int, bool> answeredQuestions = new Dictionary<int, bool>();
    private string saveMessageType = "info";

    protected override async Task OnInitializedAsync()
    {
        Logger.LogInformation("OnInitializedAsync: Fetching quiz for QuizId={QuizId}", QuizId);

        try
        {
            // Use UserQuizApiService to fetch the user quiz by ID
            Quiz = await UserQuizApiService.GetUserQuizByIdAsync(QuizId);

            if (Quiz?.Questions != null)
            {
                Logger.LogInformation("OnInitializedAsync: Quiz has {Count} questions.", Quiz.Questions.Count);
                totalQuestions = Quiz.Questions.Count;
                learnMode = Quiz.LearnMode;
            }
            else
            {
                Logger.LogWarning("OnInitializedAsync: Quiz or Quiz.Questions is null.");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "OnInitializedAsync: Error fetching quiz: {Message}", ex.Message);
            saveMessage = $"Error loading quiz: {ex.Message}";
            saveMessageType = "danger";
        }
    }
}

@code {
    private bool autoSubmit = true;
    private string? saveMessage;

    private int totalQuestions;
    private int totalAnswered;
    private int correctAnswers;

    private bool showFinalMessage = false;
    private bool muteSound = false;
    private bool learnMode = false;

    protected override void OnInitialized()
    {
        Logger.LogInformation("OnInitialized: TakeAQuiz component initialized.");
    }

    private void HandleQuizUpdated()
    {
        Logger.LogInformation("HandleQuizUpdated: StateHasChanged called.");
        StateHasChanged();
    }

    private void ToggleAutoSubmit()
    {
        autoSubmit = !autoSubmit;
        Logger.LogInformation("ToggleAutoSubmit: autoSubmit is now {AutoSubmit}", autoSubmit);
    }

    private void ToggleMute()
    {
        muteSound = !muteSound;
        Logger.LogInformation("ToggleMute: muteSound is now {MuteSound}", muteSound);
    }

    private async Task ToggleLearnMode()
    {
        if (Quiz is not null)
        {
            learnMode = !learnMode;
            Quiz.LearnMode = learnMode;
            saveMessage = learnMode ? "Learn Mode enabled!" : "Learn Mode disabled!";
            saveMessageType = "info";
            Logger.LogInformation("ToggleLearnMode: LearnMode is now {LearnMode}", learnMode);
            await JS.InvokeVoidAsync("console.log", saveMessage);
        }
        else
        {
            saveMessage = "No quiz loaded to toggle Learn Mode.";
            saveMessageType = "warning";
            Logger.LogWarning("ToggleLearnMode: No quiz loaded.");
        }
    }

    // Ensure that a quiz attempt exists, creating one if needed
    private async Task<bool> EnsureQuizAttemptExistsAsync()
    {
        if (CurrentAttempt != null) return true;
        CurrentAttempt = await QuizAttemptService.CreateAttemptAsync(QuizId, totalAnswered, correctAnswers);
        AttemptStartTime = DateTime.Now;
        return CurrentAttempt != null;
    }

    // Refactored: Modularize answer submission logic
    private async Task HandleAnswerSubmitted((bool isCorrect, int questionIndex) args)
    {
        var (isCorrect, questionIndex) = args;

        try
        {
            if (Quiz == null || Quiz.Questions == null || questionIndex < 0 || questionIndex >= Quiz.Questions.Count)
            {
                Logger.LogError("HandleAnswerSubmitted: Invalid quiz state or question index: {QuestionIndex}", questionIndex);
                saveMessage = "Error: Invalid question data";
                saveMessageType = "danger";
                StateHasChanged();
                return;
            }

            var question = Quiz.Questions[questionIndex];
            Logger.LogInformation("HandleAnswerSubmitted: Answer submitted for question {QuestionIndex} (ID: {QuestionId}), isCorrect={IsCorrect}, UserAnswer={UserAnswer}", questionIndex, question.Id, isCorrect, question.UserAnswer);

            totalAnswered++;

            if (isCorrect)
            {
                correctAnswers++;
                Logger.LogInformation("HandleAnswerSubmitted: correctAnswers incremented to {CorrectAnswers}", correctAnswers);
            }

            // Step 1: Create attempt if it doesn't exist
            if (!await EnsureQuizAttemptExistsAsync())
            {

                // return; // Exit if we couldn't create or get the attempt
            }
            else
            {                
                await UpdateUserQuizAttemptAsync();         // Step 3: Update the attempt with the latest score
            }

            Logger.LogInformation("HandleAnswerSubmitted: Current attempt ID: {AttemptId}", CurrentAttempt?.Id);

            // Step 2: Save user response for this question
            bool savedResponse = await SaveQuestionAnswerAsync(isCorrect, questionIndex);
            if (!savedResponse)
            {
                Logger.LogError("HandleAnswerSubmitted: Failed to save user response for question {QuestionIndex}", questionIndex);
                saveMessage = "Error: Could not save your answer";
                saveMessageType = "danger";
                StateHasChanged();
                return;
            }



            // Check if all questions have been answered
            if (Quiz.Questions != null && totalAnswered >= Quiz.Questions.Count)
            {
                showFinalMessage = true;
                await HandleQuizCompletionAsync();
            }

            // Clear any previous error messages
            saveMessage = null;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "HandleAnswerSubmitted: Error handling answer submission: {Message}", ex.Message);
            saveMessage = $"Error: {ex.Message}";
            saveMessageType = "danger";
            StateHasChanged();
        }
    }

    // Helper: Create a new UserQuizAttempt
    private async Task CreateUserQuizAttemptAsync()
    {
        Logger.LogInformation("CreateUserQuizAttemptAsync: Creating attempt for UserQuizId={UserQuizId}", QuizId);

        try
        {
            AttemptStartTime = DateTime.Now;
            var attempt = new UserQuizAttempt
            {
                UserQuizId = QuizId,
                AttemptDate = AttemptStartTime.Value,
                Score = totalAnswered > 0 ? (double)correctAnswers / totalAnswered : 0,
                Duration = TimeSpan.Zero
            };

            var createdAttempt = await UserQuizAttemptApiService.CreateAsync(attempt);
            if (createdAttempt == null || createdAttempt.Id == 0)
            {
                Logger.LogError("CreateUserQuizAttemptAsync: Failed to create UserQuizAttempt or received invalid Id");
                throw new InvalidOperationException("Could not start quiz attempt");
            }

            Logger.LogInformation("CreateUserQuizAttemptAsync: Created attempt with Id={Id}", createdAttempt.Id);
            CurrentAttempt = createdAttempt;
            CurrentAttemptId = createdAttempt.Id;

            // Initialize answer tracking dictionary
            if (Quiz?.Questions != null)
            {
                foreach (var question in Quiz.Questions)
                {
                    answeredQuestions[question.Id] = false;
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "CreateUserQuizAttemptAsync: Error creating attempt: {Message}", ex.Message);
            throw; // Rethrow to be handled by the caller
        }
    }

    // Helper: Update an existing UserQuizAttempt
    private async Task UpdateUserQuizAttemptAsync()
    {
        if (CurrentAttempt == null || !AttemptStartTime.HasValue) return;
        await QuizAttemptService.UpdateAttemptAsync(
            CurrentAttempt,
            totalAnswered,
            correctAnswers,
            AttemptStartTime.Value
        );
    }

    // Helper: Save user response to a question
    private async Task<bool> SaveQuestionAnswerAsync(bool isCorrect, int questionIndex)
    {
        if (Quiz == null || CurrentAttempt == null) return false;
        var question = Quiz.Questions[questionIndex];
        return await QuizAttemptService.SaveAnswerAsync(CurrentAttempt, question, isCorrect);
    }

    // Helper: Handle end-of-quiz logic
    private async Task HandleQuizCompletionAsync()
    {
        Logger.LogInformation("HandleQuizCompletionAsync: All questions answered. Final score: {CorrectAnswers}/{TotalAnswered}", correctAnswers, totalAnswered);
        showFinalMessage = true;
        await JS.InvokeVoidAsync("scrollToTopSmooth");
        double scorePercent = totalAnswered > 0 ? (double)correctAnswers / totalAnswered : 0;

        if (scorePercent >= 0.8)
        {
            Logger.LogInformation("HandleQuizCompletionAsync: Score >= 80%, playing applause and launching confetti");

            if (!muteSound)
            {
                await JS.InvokeVoidAsync("playSound", "/sounds/applause.mp3");
            }

            await JS.InvokeVoidAsync("launchConfetti");
            saveMessage = "Great job! You've completed the quiz with a passing score.";
            saveMessageType = "success";
        }
        else
        {
            saveMessage = "Quiz completed. You might want to review the material and try again.";
            saveMessageType = "warning";
        }
    }
}