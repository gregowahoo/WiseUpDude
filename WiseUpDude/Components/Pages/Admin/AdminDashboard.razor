@page "/admin"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]

@inject NavigationManager Nav

<PageTitle>Admin Dashboard</PageTitle>

<div class="container my-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <div class="row g-3">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Users</h5></div>
                <div class="card-body">
                    <p class="card-text">Search, paginate, and manage users and roles.</p>
                    <a class="btn btn-primary" href="/admin/users"><i class="bi bi-people me-1"></i>Open Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Special Assignments</h5></div>
                <div class="card-body">
                    <p class="card-text">Schedule featured quizzes and time-bound assignments.</p>
                    <a class="btn btn-outline-secondary" href="/admin/special-assignments">Manage Assignments</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Category Art</h5></div>
                <div class="card-body">
                    <p class="card-text">Generate and refresh category icons.</p>
                    <a class="btn btn-outline-secondary" href="/admin/category-art"><i class="bi bi-magic me-1"></i>Category Art Tools</a>
                </div>
            </div>
        </div>
    </div>
</div>
